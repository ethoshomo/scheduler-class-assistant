{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "front",
	"version": "0.1.0",
	"identifier": "scheduler-class-assistant",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Scheduler Class Assistant",
				"width": 800,
				"height": 600,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"shell": {
			"open": true,
			"scope": {
				"allow": [
					{
						"name": "back",
						"cmd": "binaries/{{target}}/back",
						"args": true
					}
				]
			}
		}
	}
}
